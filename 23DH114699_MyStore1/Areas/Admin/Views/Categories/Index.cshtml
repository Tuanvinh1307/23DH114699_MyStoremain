@model IEnumerable<_23DH114699_MyStore1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH DANH MỤC SẢN PHẨM</h2>

<p>
    @Html.ActionLink("thêm mới", "Create", null , new {@class = "btn btn-primary"})
</p>
<table class="table bg-info col-md-6">
    <tr>
        <th class="col-lg-5 col-md-4">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            TÊN CÁC DANH MỤC
        </th>
        <th class="col-lg-3 col-md-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })

        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Thêm mới", "Create", null, new {@class = "btn btn-primary"})
</p>